<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="
    http://www.liquibase.org/xml/ns/dbchangelog
    http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.24.xsd">

    <changeSet id="7-1-products-inventory" author="karl">
        <addColumn tableName="products">
            <column name="stock_qty" type="int" defaultValueNumeric="0">
                <constraints nullable="false"/>
            </column>
            <column name="is_available" type="boolean" defaultValueBoolean="true">
                <constraints nullable="false"/>
            </column>
        </addColumn>
    </changeSet>

    <!-- 2) CHECK (stock_qty >= 0) -->
    <changeSet id="7-2-products-inventory-check" author="karl">
        <preConditions onFail="MARK_RAN">
            <sqlCheck expectedResult="0">
                SELECT COUNT(*) FROM information_schema.table_constraints
                WHERE table_name = 'products' AND constraint_name = 'ck_products_stock_nonneg'
            </sqlCheck>
        </preConditions>
        <sql>
            ALTER TABLE products
                ADD CONSTRAINT ck_products_stock_nonneg
                    CHECK (stock_qty &gt;= 0);
        </sql>
    </changeSet>
</databaseChangeLog>

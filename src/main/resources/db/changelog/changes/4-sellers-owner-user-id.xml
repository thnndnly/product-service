<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="
      http://www.liquibase.org/xml/ns/dbchangelog
      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.24.xsd">

    <!-- Owner-Zuordnung eines Sellers zu einer User-ID (erstmal nullable) -->
    <changeSet id="4-sellers-owner-user-id" author="karl">
        <addColumn tableName="sellers">
            <column name="owner_user_id" type="uuid"/>
        </addColumn>

        <createIndex indexName="ix_sellers_owner_user_id" tableName="sellers">
            <column name="owner_user_id"/>
        </createIndex>
    </changeSet>
</databaseChangeLog>
